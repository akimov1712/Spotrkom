<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/background_progress_bar">
        <shape android:shape="rectangle">

            <corners android:radius="3dp"/>
            <solid android:color="@color/progress_bar_background_black"/>

        </shape>
    </item>

    <item android:id="@+id/progress_progress_bar">

        <scale android:scaleWidth="100%">

            <shape android:shape="rectangle">
                <corners android:radius="3dp"/>
                <solid android:color="@color/progress_bar_progress_black"/>
            </shape>

        </scale>

    </item>

</layer-list>